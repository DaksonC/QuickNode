{
  "name": "quicknode-cli",
  "version": "1.0.0",
  "description": "A CLI tool to quickly bootstrap Node.js projects with pre-configured dependencies and clean architecture",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "quicknode": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc && cp -r templates dist/",
    "dev": "ts-node-dev --esm src/cli.ts",
    "start": "node dist/cli.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "prepare": "husky install",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "nodejs",
    "cli",
    "template",
    "express",
    "typescript",
    "clean-architecture",
    "boilerplate"
  ],
  "author": "Your Name",
  "license": "MIT",
  "files": [
    "dist",
    "templates"
  ],
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "fs-extra": "^11.1.1",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
