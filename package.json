{
  "name": "@10565/quicknode-cli",
  "version": "1.0.1",
  "description": "A CLI tool to quickly bootstrap Node.js projects with pre-configured dependencies and clean architecture",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "qn": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc && cp -r templates dist/",
    "dev": "ts-node-dev --esm src/cli.ts",
    "start": "node dist/cli.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "release:patch": "./scripts/release.sh patch",
    "release:minor": "./scripts/release.sh minor",
    "release:major": "./scripts/release.sh major",
    "release:prerelease": "./scripts/release.sh prerelease"
  },
  "keywords": [
    "nodejs",
    "cli",
    "template",
    "express",
    "typescript",
    "clean-architecture",
    "boilerplate"
  ],
  "author": "Dakson C <daksonmendes@outlook.com>",
  "license": "MIT",
  "homepage": "https://github.com/DaksonC/QuickNode#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DaksonC/QuickNode.git"
  },
  "bugs": {
    "url": "https://github.com/DaksonC/QuickNode/issues"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "figlet": "^1.9.3",
    "fs-extra": "^11.1.1",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@types/figlet": "^1.7.0",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
