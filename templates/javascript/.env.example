# Database Configuration
# Supported types: postgresql, mongodb, mysql, sqlite
# PostgreSQL is the default and recommended database
DB_TYPE=postgresql

# PostgreSQL Configuration (Default - works with Docker Compose)
DATABASE_URL=postgresql://postgres:password@localhost:5432/quicknode_db
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=quicknode_db

# MongoDB Configuration
MONGO_URL=mongodb://localhost:27017/quicknode_db

# MySQL Configuration (when DB_TYPE=mysql)
# DB_HOST=localhost
# DB_PORT=3306
# DB_USERNAME=root
# DB_PASSWORD=password
# DB_NAME=quicknode_db

# SQLite Configuration (when DB_TYPE=sqlite)
# SQLITE_PATH=./database.sqlite

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Secret (generate a secure secret for production)
JWT_SECRET=your-super-secure-jwt-secret-key

# API Configuration
API_VERSION=v1
